<%- include('partials/head') %>

<body>

    <%- include('partials/menu') %>

    <%- include('partials/header') %>

    <aside class="w-full bg-slate-700 border-b border-slate-800 text-xs flex justify-center px-10 min-h-12">

        <%- include('partials/collectionNav') %>

    </aside>
    
    
<main class="flex-1 flex flex-wrap justify-center m-4 gap-1">
    
    <% superheroes.forEach(( heroe )=>{ %>
        <div class="w-[25em] bg-slate-700 border-2 border-slate-600">

            <header class="grid grid-cols-9 px-3 pt-1 rounded-br-full bg-stone-900 select-none">
                
                <h6 class="col-span-7 font-black select-text"><%= heroe.nombreSuperHeroe %></h6>
                <aside class="col-span-2">
                    <a href="/api/heroes/id/<%= heroe._id %>"><button class="text-center text-yellow-400 hover:text-yellow-100" id="<%= heroe._id %>">
                        <p class="cursor-pointer text-xl">&#128065;</p></button></a>
                    <a href="/api/heroes/editar/id/<%= heroe._id %>"><button class="text-center text-yellow-400 hover:text-yellow-100" id="<%= heroe._id %>">
                        <p class="cursor-pointer text-xl">&#x270D;</p></button></a>
                    <a href="/api/heroes/borrar/id/<%= heroe._id %>"><button class="text-center text-yellow-400 hover:text-yellow-100" id="<%= heroe._id %>">
                        <p class="cursor-pointer text-xl">&#10006;</p></button></a>
                    
                </aside>
                
            </header>

            <main class="text-sm grid grid-cols-5 p-1">
                <span class="select-none text-right pr-2 text-gray-400">Nombre:</span>
                <p class="col-span-4"><%= heroe.nombreReal %></p>
            </main>

            <main class="text-sm grid grid-cols-5 p-1 bg-slate-600">
                <span class="select-none text-right pr-2 text-gray-400">Edad:</span>
                <p><%= heroe.edad %></p>
                <span class="select-none text-right pr-2 text-gray-400">Or√≠gen:</span>
                <p class="col-span-2"><%= heroe.planetaOrigen %></p>
            </main>

            <main class="text-sm grid p-1 bg-slate-700 grid grid-cols-5">
                <span class="select-none text-right pr-2 col-span-1 text-gray-400">Debilidad:</span><p class="col-span-4"><%= heroe.debilidad %></p>
            </main>

            <% if (heroe.poderes && heroe.poderes.length > 0) { %>
                <main class="grid grid-cols-5 text-sm p-1 bg-slate-600">
                    <span class="select-none text-right pr-2 col-span-1 text-gray-400">Poderes:</span><p class="col-span-4"><%= heroe.poderes.join(', ') %></p>
                </main>
            <% } else { %>
                <main class="grid grid-cols-5 text-sm p-1 bg-slate-600">
                    <span class="select-none text-right pr-2 col-span-1 text-gray-400">Poderes:</span><p class="col-span-4">No tiene %></p>
                </main>
            <% } %>

            <% if (heroe.aliados && heroe.aliados.length > 0) { %>
                <main class="grid grid-cols-5 text-sm p-1 bg-slate-700">
                    <span class="select-none text-right pr-2 col-span-1 text-gray-400">Aliados:</span><p class="col-span-4"><%= heroe.aliados.join(', ') %></p>
                </main>
            <% } else { %>
                <main class="grid grid-cols-5 text-sm p-1 bg-slate-700">
                    <span class="select-none text-right pr-2 col-span-1 text-gray-400">Aliados:</span><p class="col-span-4">No tiene %></p>
                </main>
            <% } %>

            <% if (heroe.enemigos && heroe.enemigos.length > 0) { %>
                <main class="grid grid-cols-5 text-sm p-1 bg-slate-600">
                    <span class="select-none text-right pr-2 col-span-1 text-gray-400">Enemigos:</span><p class="col-span-4"><%= heroe.enemigos.join(', ') %></p>
                </main>
            <% } else { %>
                <main class="grid grid-cols-5 text-sm p-1 bg-slate-600">
                    <span class="select-none text-right pr-2 col-span-1 text-gray-400">Enemigos:</span><p class="col-span-4">No tiene %></p>
                </main>
            <% } %>

            <main class="text-sm grid grid-cols-5 p-1 bg-slate-700">
                <span class="select-none text-right pr-2 text-gray-400">Creador:</span>
                <p class="col-span-4"><%= heroe.creador %></p>
            </main>

            <main class="text-sm grid grid-cols-5 p-1 bg-slate-600">
                <span class="select-none text-right pr-2 text-gray-400">_id:</span>
                <p class="col-span-4"><%= heroe._id %></p>
            </main>

        </div>
    <% }) %>
            
</main>

    <h5 class="text-center text-sm font-light text-gray-300 my-4"><%= site.nav[1].description %></h5>

    <%- include('partials/footer') %>
    